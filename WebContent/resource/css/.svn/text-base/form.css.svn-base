html {
	height: 100%;
}
body {
	height: 100%;
	min-width: 1024px;
}
h1 {
	margin: 0;
	padding: 0;
	color: white;
	height:100%;
	line-height: 100%;
	float: left;
	margin-left: 20px;
	font-size: 24px;
}
.nav {
	float: left;
	box-sizing: border-box;
	width: 100%;
	height: 7%;
	padding-top: 12px;
	background-color: #58738E;
}
.nav span{
	float: right;
	margin-right: 20px;
}
.nav span a{
	margin: 0 10px;
	color: white;
}
.layout{
	background-color: #ECEDF0;
	height: 100%;
	overflow: hidden;
}
iframe {
	width:100%;
	height: 100%;
	background-color: #ECEDF0;
}
.bodyleft{
	min-width: 150px;
	float: left;
	width: 15%;
	background-color: #2D3F51;
	height: 93%;
	box-sizing: border-box;
}
.bodyright{
	float: left;
	width: 85%;
	min-width: 500px;
	height: 93%;
	padding: 0 0 0 20px;
}
