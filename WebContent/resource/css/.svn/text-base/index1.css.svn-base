/*轮播图部分*/
body{
	font:14px "微软雅黑";
}
.container {
	min-height: 82%;
	box-sizing: border-box;
}
.wrap{
    width:100%;
    padding-top:10px ;
    box-sizing: border-box;
    height: 300px;
    background: url(../images/100.png) center center;
}
.slide {
    height:100%;
    position: relative;
}
.slide li{
    position: absolute;
    left:200px;
    top:0;
}
.slide li img{
    width:100%;
}
.slide p{
	margin: 0;
	text-align: center;
	font: bold 24px  "微软雅黑";
	color: #778899;
}
.arrow{
    display: none;
}
.prev,.next{
    width:48px;
    height:62px;
    position: absolute;
    top:50%;
    margin-top:-56px;
    background: url(../images/arrowleft.png) no-repeat;
    background-position: left bottom; 
    z-index: 99;
}
.next{
    right:0;
    background-image: url(../images/arrowright.png);
    background-position: right bottom;
}
/*概要部分*/
.abstract {
	padding-top: 55px;
}
.abstract .abdetail{
	width: 94%;
	margin: 0 auto;
}
.abstract .block{
	margin-bottom: 20px;
}
.abstract .blocktop {
	border-bottom: 2px solid #DADADA;
	height: 36px;
}
.abstract .blocktop .blocktitle{
	vertical-align: top;
	font-size: 20px;
	font-weight: 700;
	margin-left: 10px;
}
.abstract .blockbottom{
	margin-top: 10px;
}
.abstract .blockbottom>div>div{
	border-top: 2px solid #3399FF;
}
.abstract .blockbotl{
	margin-left: 151px;
}
.abstract .bbotrt>span,.abstract .bbotlt>span{
	font-size: 18px;
	font-weight: 700;
	background-color: #3399FF;
	color: white;
	display: inline-block;
	padding: 5px 0px;
	width: 150px;
	text-align: center;
}
.abstract .bbotrt>a,.abstract .bbotlt>a {
	float: right;
	color: #3399FF;
	margin-top: 7px;
	font-size: 14px;
}
.abstract .bbotrt>a>img,.abstract .bbotlt>a>img{
	margin-left: 5px;
}
.abstract .blockbottom>div {
	float: left;
	width: 460px;
}
.abstract .blockbottom ul {
	padding-left: 5px;
}
.abstract .blockbottom ul li{
	height: 30px;
}
.abstract .blockbottom ul li span{
	float: right;
	color: gray;
	font-size: 14px;
}
.abstract .blockbottom ul a:hover{
	text-decoration: underline;
	color: #3399FF;
}
/*搜索栏部分*/
.searchbar {
	float: left;
	margin-left: 210px;
	margin-top: 20px;
}

.searchbar>div {
	float: left;
	height: 30px;
	line-height: 30px;
}
.searchbar button{
	height: 32px;
	border: 0 none;
	width: 70px;
	cursor: pointer;
	background-color: #5794D5;
	color: white;
}
.searchsel {
    width: 100px;
    border:1px solid #E6E6E6;
    text-align: center;
    background-image: url(../images/option_arr.gif);
    background-repeat: no-repeat;
    background-position: 87px;
    position: relative;
    cursor: pointer;
}
.searchsel span {
	width: 100%;
	display: inline-block;
}
.searchsel ul {
	margin: 0;
	padding: 0;
	width: 100px;
	background-color: white;
	position: absolute;
	top: 30px;
	z-index: 9;
	display: none;
}
.searchsel ul li {
	border: 1px solid #E6E6E6;
}
.searchsel ul li:hover{
	background-color: #6DA9DE;
	color: white;
}
.searchcol {
	border:1px solid #E6E6E6;
	width: 347px;
}
.searchcol>input{
	box-sizing: border-box;
	margin: 0;
	padding: 2px 20px;
	border: 0;
	height: 30px;
	width: 347px;
}
/*个人中心*/
.login {
	position: absolute;
	right: 0;
	z-index: 100;
	width: 200px;
	font: 500 16px  "微软雅黑";
	line-height: 50px;
	text-align: center;
	background: url(../images/user.fw.png) center 20px no-repeat;
	
}
.login>a {
	display: inline-block;
	margin: 0 auto;
	margin-top: 22px;
	padding: 0 7px;
}
.login>.user{
	display: block;
	white-space:nowrap; 
	overflow:hidden;
	text-overflow:ellipsis;
}
.logout {
	font: 500 16px  "微软雅黑";
	background-color: white;
	padding: 10px 0;
	display: none;
}
.logout>a{
	box-sizing: border-box;
	float: left;
	width: 50%;
	padding: 3px 0;
	position: relative;
}
.logout a span{
	position: absolute;
	top: -5px;
	right: 12px;
	background-color: red;
	padding:0 3px;
	line-height: 14px;
	color: white;
	font-size: 12px;
	border-radius:  14px 14px 14px 0;
}
