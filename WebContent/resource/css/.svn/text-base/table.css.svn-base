body {
	padding: 20px;
	box-sizing: border-box;
}
.ifamelayout{
	background-color: white;
	width: 100%;
}
.ifamelayout table{
	width: 100%;
	margin-bottom: 10px;
}
/*查询版面*/
.search {
	font-size: 14px;
	height: 220px;
}
.search h3 {
	color: #545454;
	font-size: 20px;
	padding: 0 20px;
	display: inline-block;
}
.search .datum{
	font:12px ;
	color: #545454;
}
.search table{
	margin-left: 15px;
}
.search tr{
	padding: 10px;
	height: 40px;
}
.search tr td{
	padding-right: 70px;
	height: 26px;
}
.search tr td input,.search tr td select {
	margin-left: -60px;
	width:167px;
	border-radius: 5px;
	box-sizing: border-box;
	padding: 1px 10px;
	border: 1px solid #CCCCCC;
}
.query {
	display: block;
	width: 50px;
	height: 25px;
	margin: 0 auto;
	background: #39B3D7;
	text-align: center;
	border-radius: 3px;
	color: white;
	outline: 0px;
	cursor: pointer;
	border: none;
	opacity: 0.8;
}
.query:hover{
	opacity: 1;
}
/*显示表格*/
.querytable{
	margin-top: 20px;;
	width:100%;
	font-size: 14px;
}
.querytable caption{
	background-color: #333;
	color: white;
	font-size: 20px;
	font-family: "microsoft yahei";
}
.querytable caption span{
	float: right;
	margin-right: 20px;
	cursor: pointer;
}
.querytable th{
	color: #777777;
	padding: 8px;
}
.querytable td{
	padding: 8px;
}
.querytable img{
	margin-right: 4px;
}
/*底部*/
.footer {
	padding-left: 40px;
	width: 100%;
	font-size: 12px;
	box-sizing: border-box;
}
.footer div{
	float: left;
}
.footerl input{
	width: 25px;
	margin-right: 15px;
	height: 20px;
}
.footerr {
	float: left;
	margin-left:19% ;
}
.footer button{
	padding: 3px 10px;
	font-size: 12px;
	cursor: pointer;
	opacity: 0.8;
	outline: none;
	border: none;
	margin-left: 10px;
	background-color: white;
}
.footer button:hover{
	opacity: 1;
}
.footernum {
	margin: 0 20px;
}
/*信息增添表单*/
.addForm {
	width: 400px;
	margin: 0 auto;
	display: none;
	position:absolute;
	left:50%;
	margin-left: -200px;
	top:24%;
	background: #EFF0F4;
	font-size: 15px;
	border: 1px solid #CCCCCC;
	border-radius: 5px;
	z-index: 5;
}
.addForm tr td{
	padding: 10px;
	height: 20px;
}
.addForm div{
	display: inline-block;
	width: 80px;
	height: 20px;
	line-height: 20px;
	background: skyblue;
	text-align: center;
	border-radius: 5px;
	cursor: pointer;
	margin-left: 60px;
	margin-bottom: 20px;
}
.addForm input {
	width: 180px;
	height: 20px;
	border-radius: 5px;
	border: 1px solid #CCCCCC;
	box-sizing: border-box;
	padding: 2px 10px;
}
.add {
	background: #5cb85c;
	color: white;
	border-radius: 4px;
	cursor: pointer;
	display: inline-block;
	height: 25px;
	line-height: 25px;
	width: 40px;
}
.del {
	background: #D9534F;
	color: white;
	border-radius: 4px;
	cursor: pointer;
	display: inline-block;
	height: 25px;
	line-height: 25px;
	width: 40px;
}
.items {
	background: #FF8F44;
	color: white;
	border-radius: 4px;
	cursor: pointer;
	display: inline-block;
	height: 25px;
	line-height: 25px;
	width: 40px;
}
/*增添信息确认弹框*/
.addnote {
	width: 500px;
	text-align: center;
	border: 1px solid #C0C0C0;
	background-color: whitesmoke;
	display: none;
	position: absolute;
	z-index: 7;
	margin-left: -250px;
	top: 44%;
	left: 50%;
}
.addnote button:nth-of-type(1){
	margin-left: -37px;
}
.addnote button:nth-of-type(2){
	margin-left: 20px;
	margin-right: -30px;
}
.addnote button {
	cursor: pointer;
	border: none;
	opacity: 0.6;
	margin-bottom: 10px;
}
.addnote button:hover {
	opacity: 1;
}
/*删除信息弹框*/
.delnote {
	width: 500px;
	text-align: center;
	border: 1px solid #C0C0C0;
	background-color: whitesmoke;
	display: none;
	position: absolute;
	z-index: 7;
	margin-left: -250px;
	top: 44%;
	left: 50%;
}
.delnote button {
	cursor: pointer;
	border: none;
	opacity: 0.6;
	margin-bottom: 10px;
}
.delnote button:hover {
	opacity: 1;
}
.delnote button:nth-of-type(1){
	margin-left: -37px;
}
.delnote button:nth-of-type(2){
	margin-left: 20px;
	margin-right: -30px;
}