$(function(){
	$('#addpro').on('click',function(){
		$('#addproject').show();
		$('#mask').show();
	});
	$('#addproject .del').on('click',function(){
		$('#addproject').hide();
		$('#mask').hide();
	});
	$('.update').on('click',function(){
		$('#bdchange').show();
		$('#mask').show();
	});
	$('.bdchange .del').on('click',function(){
		$('#bdchange').hide();
		$('#mask').hide();
	});
});
